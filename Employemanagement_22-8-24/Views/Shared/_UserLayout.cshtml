@model Employemanagement_22_8_24.Models.User

@{
    ViewData["Title"] = "User Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alike&family=Baskervville+SC&family=Kalam:wght@300;400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: url('https://images.pexels.com/photos/380768/pexels-photo-380768.jpeg?cs=srgb&dl=pexels-seven11nash-380768.jpg&fm=jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: "Alike", serif;
            font-weight: 400;
            font-style: normal;
        }

        .navbar-custom {
            backdrop-filter: blur(5px);
        }

        .dashboard-container {
            margin-top: 70px;
            padding: 20px;
            color: black;
        }

        .dashboard-card {
            padding: 20px;
            border-radius: 10px;
            backdrop-filter: blur(100px);
        }

        .dashboard-header h1 {
            font-size: 2rem;
            font-weight: bold;
            color: black;
        }

        .container-box {
            padding: 20px;
            border-radius: 10px;
            color: white;
            margin-bottom: 20px;
        }

        .box-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 15px;
            color: black;
        }

        dt {
            font-weight: bold;
        }

        .btn-custom {
            margin: 5px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <a class="navbar-brand" href="#">Dashboard</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ViewRequests", "User")">View Requests</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("AddRequest", "User")">Add Request</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link btn btn-danger btn-custom" href="@Url.Action("Logout", "User")">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container dashboard-container">
        @RenderBody()
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>