@model Employemanagement_22_8_24.Models.User

@{
    ViewData["Title"] = "User Dashboard";
}

<h1>User Dashboard</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Welcome, @Model.Name</h2>
            <dl class="row">
                <dt class="col-sm-3">User ID</dt>
                <dd class="col-sm-9">@Model.UserId</dd>

                <dt class="col-sm-3">Date of Birth</dt>
                <dd class="col-sm-9">@Model.DateOfBirth?.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Gender</dt>
                <dd class="col-sm-9">@Model.Gender</dd>

                <dt class="col-sm-3">Marital Status</dt>
                <dd class="col-sm-9">@Model.MaritalStatus</dd>

                <dt class="col-sm-3">Blood Group</dt>
                <dd class="col-sm-9">@Model.BloodGroup</dd>

                <dt class="col-sm-3">Nationality</dt>
                <dd class="col-sm-9">@Model.Nationality</dd>

                <dt class="col-sm-3">Residential Address</dt>
                <dd class="col-sm-9">@Model.ResidentialAddress</dd>

                <dt class="col-sm-3">District</dt>
                <dd class="col-sm-9">@Model.District</dd>

                <dt class="col-sm-3">State</dt>
                <dd class="col-sm-9">@Model.State</dd>

                <dt class="col-sm-3">Personal Phone Number</dt>
                <dd class="col-sm-9">@Model.PersonalPhoneNumber</dd>

                <dt class="col-sm-3">Basic Pay</dt>
                <dd class="col-sm-9">@Model.BasicPay.ToString("C")</dd>

                <dt class="col-sm-3">HRA</dt>
                <dd class="col-sm-9">@Model.HRA.ToString("C")</dd>

                <dt class="col-sm-3">Conveyance Allowance</dt>
                <dd class="col-sm-9">@Model.ConveyanceAllowance.ToString("C")</dd>

                <dt class="col-sm-3">Fixed Medical Allowance</dt>
                <dd class="col-sm-9">@Model.FixedMedicalAllowance.ToString("C")</dd>

                <dt class="col-sm-3">Total Earnings</dt>
                <dd class="col-sm-9">@Model.TotalEarnings.ToString("C")</dd>

                <dt class="col-sm-3">Bank Name</dt>
                <dd class="col-sm-9">@Model.BankName</dd>

                <dt class="col-sm-3">Account Holder Name</dt>
                <dd class="col-sm-9">@Model.AccountHolderName</dd>

                <dt class="col-sm-3">Account Number</dt>
                <dd class="col-sm-9">@Model.AccountNumber</dd>

                <dt class="col-sm-3">Designation</dt>
                <dd class="col-sm-9">@Model.Designation</dd>

                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9">@Model.Department</dd>

                <dt class="col-sm-3">Start Date</dt>
                <dd class="col-sm-9">@Model.StartDate?.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Employment Type</dt>
                <dd class="col-sm-9">@Model.EmploymentType</dd>

                <dt class="col-sm-3">Work Email</dt>
                <dd class="col-sm-9">@Model.WorkEmail</dd>

                <dt class="col-sm-3">Work Phone Number</dt>
                <dd class="col-sm-9">@Model.WorkPhoneNumber</dd>
            </dl>

            <div class="form-group">
                <a href="@Url.Action("ViewRequests", "User")" class="btn btn-primary">View Requests</a>
                <a href="@Url.Action("AddRequest", "User")" class="btn btn-secondary">Add Request</a>
                <a href="@Url.Action("Logout", "Account")" class="btn btn-danger">Logout</a>
            </div>
        </div>
    </div>
</div>
