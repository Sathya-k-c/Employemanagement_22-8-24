@model Employemanagement_22_8_24.Models.User

@{
    ViewData["Title"] = "User Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alike&family=Baskervville+SC&family=Kalam:wght@300;400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: url('https://images.pexels.com/photos/380768/pexels-photo-380768.jpeg?cs=srgb&dl=pexels-seven11nash-380768.jpg&fm=jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: "Alike", serif;
            font-weight: 400;
            font-style: normal;
            
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.8); /* Semi-transparent black navbar */
        }



        .navbar-custom {
            background: linear-gradient(to right, #ff6f61, #d83a56); /* Gradient background for navbar */
            color: #ffffff !important; /* Ensure navbar text is white */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000; /* Ensure navbar stays on top */
        }

        .navbar-brand, .nav-link {
            color: #ffffff !important; /* Ensure navbar text is white */
        }

        .dashboard-container {
            margin-top: 70px; /* Margin to make room for the navbar */
            padding: 20px;
            color:black;
        }

        .dashboard-card {
            padding: 20px;
            border-radius: 10px;
           
            backdrop-filter: blur(100px); /* Blur effect for the background */
        }

        .dashboard-header {
            margin-bottom: 20px;
            text-align: center;
        }

            .dashboard-header h1 {
                font-size: 2rem;
                font-weight: bold;
                color: black; /* Light color for the header */
            }

        .container-box {
            padding: 20px;
            border-radius: 10px;
            color:white;
           
            margin-bottom: 20px;
        }

        .box-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 15px;
            color: black; /* Light color for the title */
        }

        dt {
            font-weight: bold;
        }

        .btn-custom {
            margin: 5px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <a class="navbar-brand" href="#">Dashboard</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ViewRequests", "User")">View Requests</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("AddRequest", "User")">Add Request</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link btn btn-danger btn-custom" href="@Url.Action("Logout", "User")">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container dashboard-container">
        <div class="dashboard-card">
            <div class="dashboard-header">
                <h1>User Dashboard</h1>
                <h2>Welcome, @Model.Name</h2>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="container-box">
                        <div class="box-title">Personal Details</div>
                        <dl class="row">
                            <dt class="col-sm-6">User ID</dt>
                            <dd class="col-sm-6">@Model.UserId</dd>

                            <dt class="col-sm-6">Date of Birth</dt>
                            <dd class="col-sm-6">@Model.DateOfBirth?.ToString("yyyy-MM-dd")</dd>

                            <dt class="col-sm-6">Gender</dt>
                            <dd class="col-sm-6">@Model.Gender</dd>

                            <dt class="col-sm-6">Marital Status</dt>
                            <dd class="col-sm-6">@Model.MaritalStatus</dd>

                            <dt class="col-sm-6">Blood Group</dt>
                            <dd class="col-sm-6">@Model.BloodGroup</dd>

                            <dt class="col-sm-6">Nationality</dt>
                            <dd class="col-sm-6">@Model.Nationality</dd>

                            <dt class="col-sm-6">Residential Address</dt>
                            <dd class="col-sm-6">@Model.ResidentialAddress</dd>

                            <dt class="col-sm-6">District</dt>
                            <dd class="col-sm-6">@Model.District</dd>

                            <dt class="col-sm-6">State</dt>
                            <dd class="col-sm-6">@Model.State</dd>

                            <dt class="col-sm-6">Personal Phone Number</dt>
                            <dd class="col-sm-6">@Model.PersonalPhoneNumber</dd>
                        </dl>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="container-box">
                        <div class="box-title">Salary Details</div>
                        <dl class="row">
                            <dt class="col-sm-6">Basic Pay</dt>
                            <dd class="col-sm-6">@Model.BasicPay.ToString("C")</dd>

                            <dt class="col-sm-6">HRA</dt>
                            <dd class="col-sm-6">@Model.HRA.ToString("C")</dd>

                            <dt class="col-sm-6">Conveyance Allowance</dt>
                            <dd class="col-sm-6">@Model.ConveyanceAllowance.ToString("C")</dd>

                            <dt class="col-sm-6">Fixed Medical Allowance</dt>
                            <dd class="col-sm-6">@Model.FixedMedicalAllowance.ToString("C")</dd>

                            <dt class="col-sm-6">Total Earnings</dt>
                            <dd class="col-sm-6">@Model.TotalEarnings.ToString("C")</dd>

                            <dt class="col-sm-6">Bank Name</dt>
                            <dd class="col-sm-6">@Model.BankName</dd>

                            <dt class="col-sm-6">Account Holder Name</dt>
                            <dd class="col-sm-6">@Model.AccountHolderName</dd>

                            <dt class="col-sm-6">Account Number</dt>
                            <dd class="col-sm-6">@Model.AccountNumber</dd>
                        </dl>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="container-box">
                        <div class="box-title">Company Details</div>
                        <dl class="row">
                            <dt class="col-sm-6">Designation</dt>
                            <dd class="col-sm-6">@Model.Designation</dd>

                            <dt class="col-sm-6">Department</dt>
                            <dd class="col-sm-6">@Model.Department</dd>

                            <dt class="col-sm-6">Start Date</dt>
                            <dd class="col-sm-6">@Model.DateOfJoin?.ToString("yyyy-MM-dd")</dd>

                            <dt class="col-sm-6">Employment Type</dt>
                            <dd class="col-sm-6">@Model.EmploymentType</dd>

                            <dt class="col-sm-6">Work Email</dt>
                            <dd class="col-sm-6">@Model.WorkEmail</dd>

                            <dt class="col-sm-6">Work Phone Number</dt>
                            <dd class="col-sm-6">@Model.WorkPhoneNumber</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
