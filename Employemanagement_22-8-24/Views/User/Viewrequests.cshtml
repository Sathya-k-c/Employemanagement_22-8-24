@model IEnumerable<Employemanagement_22_8_24.Models.Request>

@{
    ViewData["Title"] = "Requests";
    
    // Assuming the UserId is available in ViewData or ViewBag
    var userId = ViewData["UserId"] as string;
}

<!DOCTYPE html>
<html>
<!-- Navbar -->

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alike&family=Baskervville+SC&family=Kalam:wght@300;400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: url('https://lh6.googleusercontent.com/proxy/P4SGZIuv2Eap_OmAFRxw01PXYA7_CrpS_o0bYPICLHyNGfsTviEzLBYD5X3-H3l33eekp3oe7-P7mpCl8i4xvAD4IKUrKu1Z2h_cPloIWbPMTwd953qq2yaichZzgogL4ptHWmmUkuberUSi2ic0Q3o8pjQB') no-repeat center center fixed;
            background-size: cover;
            color: mediumseagreen; /* Default text color */
            font-family: "Alike", serif;
            font-weight: 400;
            font-style: normal;
        }

        .container {
            backdrop-filter: blur(10px);
            margin-top: 70px; /* Margin to make room for the navbar */
            padding: 20px;
        }

        .table-container {
            /* Semi-transparent black for contrast */
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        .table thead th {
            background-color: #343a40; /* Dark background for the header */
            color: mediumseagreen; /* White text color */
        }

        .table tbody tr:nth-child(odd) {
            /* Alternating row colors */
            color: #ffffff;
        }

        .highlight-shadow {
            color: white; /* Text color */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); /* Shadow color and position */
        }

        .table tbody tr:nth-child(even) {
            /* Alternating row colors */
            backdrop-filter: blur(2px);
        }

        .btn-custom {
            margin: 5px;
        }

        .btn-add {
            background-color: #007bff; /* Primary button color */
            color: #ffffff; /* White text */
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.8); /* Semi-transparent black navbar */
        }



        .navbar-custom {
            background: linear-gradient(to right, #ff6f61, #d83a56); /* Gradient background for navbar */
            color: #ffffff !important; /* Ensure navbar text is white */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000; /* Ensure navbar stays on top */
        }

        .navbar-brand, .nav-link {
            color: #ffffff !important; /* Ensure navbar text is white */
        }
    </style>
</head>


<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <a asp-controller="User" asp-action="UserDashboard" asp-route-userId="@userId" class="navbar-brand"> Dashboard</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ViewRequests", "User")">View Requests</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("AddRequest", "User")">Add Request</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link btn btn-danger btn-custom" href="@Url.Action("Logout", "User")">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="table-container">
            <h1 class="text-center mb-4" style="color:indigo">@ViewData["Title"]</h1>

            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Request ID</th>
                        <th>Edit Request</th>
                        <th>Request Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="highlight-shadow">
                    @foreach (var request in Model)
                    {
                        <tr>
                            <td>@request.RequestId</td>
                            <td>@request.EditRequest</td>
                            <td>
                                @if (request.RequestDate != null)
                                {
                                    @request.RequestDate.ToString("yyyy-MM-dd")
                                }
                                else
                                {
                                    <span class="text-warning">No Date</span>
                                }
                            </td>
                            <td>
                                @request.isprocessed
                            </td>
                            <td>
                                @if (request.isprocessed == Employemanagement_22_8_24.Data.Enums.Isprocessed.Processing)
                                {
                                    <form asp-action="DeleteRequest" asp-route-id="@request.RequestId" method="post" onsubmit="return confirm('Are you sure you want to delete this request?');">
                                        <button type="submit" class="btn btn-danger btn-custom">Delete</button>
                                    </form>
                                }
                                @if (request.isprocessed != Employemanagement_22_8_24.Data.Enums.Isprocessed.Processing)
                                {
                                    <p>@request.Remarks</p> <!-- Display remarks if any -->
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-center mt-4">
                <a asp-controller="User" asp-action="UserDashboard" asp-route-userId="@userId" class="btn btn-add btn-custom">Go to User Dashboard</a>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>