@model Employemanagement_22_8_24.Models.Request


@{
    ViewBag.Title = "Add Request";
  
    // Retrieve the UserId from the session or from ViewData if passed by the controller
    var userId = ViewData["UserId"] as string; // Retrieve UserId from ViewData

}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alike&family=Baskervville+SC&family=Kalam:wght@300;400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: url('https://wallpapers.com/images/hd/hd-office-background-1920-x-1080-bcynny890vbtg364.jpg') no-repeat center center fixed;
            background-size: cover;
            color:aliceblue;
            font-family: "Alike", serif;
            font-weight: 400;
            font-style: normal;
             /* Default text color */
        }

        .container {
            backdrop-filter: blur(5px);
            margin-top: 70px; /* Margin to make room for the navbar */
            padding: 20px;
            font-weight: bold;
        }

        .form-container {
             /* Semi-transparent black */
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        .transparent-textbox {
            background-color: transparent;
            border: 1px solid #ccc; /* Optional: border color */
            color: black; /* Optional: text color */
            box-shadow: none; /* Optional: remove box shadow */
            font-weight: bold;
            opacity: 1;
        }

           

            /* Styling the placeholder text color */
            .transparent-textbox::placeholder {
                color: #000; /* Placeholder text color */
                opacity: 1; /* Ensure placeholder is fully opaque */
            }

        .btn-custom {
            margin: 5px;
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.8); /* Semi-transparent black navbar */
        }



        .navbar-custom {
            background: linear-gradient(to right, #ff6f61, #d83a56); /* Gradient background for navbar */
            color: #ffffff !important; /* Ensure navbar text is white */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000; /* Ensure navbar stays on top */
        }

        .navbar-brand, .nav-link {
            color: #ffffff !important; /* Ensure navbar text is white */
        }
    </style>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <a asp-controller="User" asp-action="UserDashboard" asp-route-userId="@userId" class="navbar-brand"> Dashboard</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ViewRequests", "User")">View Requests</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("AddRequest", "User")">Add Request</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link btn btn-danger btn-custom" href="@Url.Action("Logout", "User")">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
</head>


<body>
    <div class="container">
        <div class="form-container">
            <h2 class="text-center mb-4">@ViewBag.Title</h2>

            <form asp-action="AddRequest" method="post">
                <div class="form-group">
                    <label asp-for="EditRequest" class="control-label"></label>
                    <textarea asp-for="EditRequest" class="form-control transparent-textbox" rows="4" placeholder="Enter your request here..."></textarea>
                    <span asp-validation-for="EditRequest" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-custom">Submit Request</button>
                </div>
            </form>
            <div class="text-center mt-4">
                <a asp-controller="User" asp-action="UserDashboard" asp-route-userId="@userId" class="btn btn-add btn-custom">Go to User Dashboard</a>
            </div>
            
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
