@model Employemanagement_22_8_24.Models.Login

@{
    ViewBag.Title = "Login";
    var returnUrl = Context.Request.Query["ReturnUrl"]; // Extract returnUrl from query string

}

<h2>Login</h2>

<form asp-action="Login" asp-controller="Account" method="post">
    <input type="hidden" name="returnUrl" value="@returnUrl" /> <!-- Pass returnUrl to the form -->

    <div class="form-group">
        <label asp-for="UserId"></label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>

    <div class="form-group mt-3">
        <a asp-action="ForgotPassword">Forgot Password?</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
